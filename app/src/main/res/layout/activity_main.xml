<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="170dp">


    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="Search"
        android:background="@color/light_grey"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_search_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="70dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Search Experts(Ex - Interior Design"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Day to Day Services"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/paint"
            android:onClick="Painter"
            android:layout_marginLeft="30dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Painter"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_child_friendly_black_24dp"
                    android:onClick="BabbySitter"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Baby Sitter"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_local_taxi_black_24dp"
                    android:onClick="Driver"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Driver"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_build_black_24dp"
                    android:onClick="Builder"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Builder"
                    android:layout_marginLeft="35dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cooking"
                    android:onClick="Cook"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Cook"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="10dp">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="4dp">
<ImageView
    android:layout_width="50dp"
    android:layout_height="30dp"
    android:src="@drawable/electr"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="5dp"/>
        <TextView
            android:text="Electrician"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:layout_marginTop="12dp"
            android:onClick="Electrician"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/tap"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:text="Plumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:onClick="Plumber"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            card_view:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/carpe"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="Carpenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:onClick="Carpenter"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            card_view:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/ref"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="Refrigirator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginTop="12dp"
                android:onClick="Refrigirator"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view5"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            card_view:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/wash"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="Washing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:onClick="Washing"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            card_view:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/amc"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:text="AMC Plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:onClick="AMC"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"/>
        </androidx.cardview.widget.CardView>


      

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

<ImageView
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:src="@drawable/homeservice"
    android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:src="@drawable/homeservicethree"
            android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:src="@drawable/one"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </HorizontalScrollView>


    <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="400dp"
        android:layout_marginTop="10dp"
       android:background="@color/white">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:text="Become a donor"
    android:textSize="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
<androidx.cardview.widget.CardView
    android:layout_width="130dp"
    android:layout_height="165dp"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="30dp">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="120dp"
          android:src="@drawable/blood"
          android:layout_marginTop="10dp"
          android:onClick="Donateblood"
          android:layout_marginLeft="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate Blood"
        android:textStyle="bold"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        />
</androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="165dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/plantt"
                    android:onClick="Donateplant"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donate Plant"
                    android:textStyle="bold"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/home"/>

   </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/profileicon"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:text="Profile"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/feedback"
                android:layout_marginRight="5dp"
                android:id="@+id/feedbackicon"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Feedback"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="42dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:src="@drawable/customercare"
                android:id="@+id/cistomercareicon"
                android:onClick="customercare"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textColor="@color/black"
                android:text="Customer"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>